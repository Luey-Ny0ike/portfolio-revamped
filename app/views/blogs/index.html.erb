<div class="blogs">
  <div class="top-part">
    <h1>Because Why Not?</h1>
    <h4 id="tbp">Lewis Nyoike's Blog Posts</h4>
  </div>
  <div class="rest-b">
    <div class="panel with-nav-tabs panel-default">
        <div class="panel-heading">
                <ul class="nav nav-tabs nav-justified">
                    <li class="active"><a href="#tab1default" data-toggle="tab">Most Recent</a></li>
                    <li><a href="#tab2default" data-toggle="tab">Popular </a></li>
                    <li><a href="#tab3default" data-toggle="tab">Programming</a></li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown">More <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#tab4default" data-toggle="tab">Default 4</a></li>
                            <li><a href="#tab5default" data-toggle="tab">Default 5</a></li>
                        </ul>
                    </li>
                </ul>
        </div>
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="tab1default">
                  <div class="container row">
                    <% @blogs.each do|blog|%>
                    <div class="col-md-4 col-sm-6 col-xs-6">
                      <div class="blog-posts">
                      <div class="image-main">
                        <%= link_to blog_path(blog), id:"link" do%>
                        <%= image_tag blog.blog_photo.url(:large), class:"img-responsive", id:"image-main"%>
                        <% end %>
                      </div>
                      <div class="content"><br>
                        <%= link_to blog_path(blog), id:"link" do%>
                        <p id="category-font"><%= blog.blog_category.name %></p>
                        <h4><%= blog.title %></h4>
                        <% end %>
                      </div>
                    </div>
                    </div>
                    <% end %>
                  </div>
                </div>
                <div class="tab-pane fade" id="tab2default">Default 2</div>
                <div class="tab-pane fade" id="tab3default">
                  <div class="container row">
                    <% @programming.each do|blog|%>
                    <div class="col-md-4 col-sm-6 col-xs-6">
                      <div class="blog-posts">
                      <div class="image-main">
                        <%= link_to blog_path(blog), id:"link" do%>
                        <%= image_tag blog.blog_photo.url(:large), class:"img-responsive", id:"image-main"%>
                        <% end %>
                      </div>
                      <div class="content"><br>
                        <%= link_to blog_path(blog), id:"link" do%>
                        <p id="category-font"><%= blog.blog_category.name %></p>
                        <h4><%= blog.title %></h4>
                        <% end %>
                      </div>
                    </div>
                    </div>
                    <% end %>
                  </div>
                </div>
                <div class="tab-pane fade" id="tab4default">Default 4</div>
                <div class="tab-pane fade" id="tab5default">Default 5</div>
            </div>
        </div>
    </div>
  </div>
</div>
